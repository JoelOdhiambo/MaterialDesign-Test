<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/primary_text_light</item>
        <item name="colorAccent">@color/navy_blue</item>
    </style>
    <style name="app_title">
        <item name="android:fontFamily">@font/georado</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize"> 50sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
